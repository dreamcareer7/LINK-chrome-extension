{
  "manifest_version": 2,
  "name": "Linkedin monitor",
  "version": "1.0",
  "description": "Make a better observation",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "css": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "storage",
    "cookies",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "img/skull.jpg",
    "default_popup": "page/popup.html",
    "default_title": "A popup will come here"
  }
}
