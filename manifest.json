{
  "manifest_version": 2,
  "name": "Linkedin monitor",
  "version": "1.0",
  "description": "Make a better observation",
  "web_accessible_resources": [
    "img/*.svg"
  ],
  "background": {
    "scripts": [
      "util.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "cookies",
    "webNavigation",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "img/spider.png",
    "default_popup": "popup.html",
    "default_title": "A popup will come here"
  }
}
